<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="io.inabsentia.superhangman">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/SuperDarkTheme">
        <activity android:name=".main.MenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".main.GameActivity">
        </activity>
        <activity android:name=".main.GuideActivity">
        </activity>
        <activity android:name=".main.FinishActivity">
        </activity>
        <activity android:name=".main.HighScoreActivity">
        </activity>
        <activity
            android:name=".main.SettingsActivity"
            android:label="@string/title_activity_settings">
        </activity>
        <activity
            android:name=".main.MatchHistoryActivity"
            android:label="@string/title_activity_match_history"
            android:theme="@style/SuperDarkTheme">
        </activity>
    </application>

</manifest>