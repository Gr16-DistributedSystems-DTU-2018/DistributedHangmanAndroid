<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/pref_default_display_name"
        android:inputType="textCapWords"
        android:key="@string/pref_user_name"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary="@string/pref_default_display_name"
        android:title="@string/pref_title_display_name"/>

    <Preference
        android:key="@string/pref_reset_match_history"
        android:summary="This will reset the current match history."
        android:title="Reset Match History"/>

    <Preference
        android:key="@string/pref_reset_high_score"
        android:summary="This will reset the current high scores."
        android:title="Reset High Scores"/>

</PreferenceScreen>