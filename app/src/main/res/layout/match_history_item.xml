<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
        android:id="@+id/position_view"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="1dp"
        android:fontFamily="@font/coiny"
        android:gravity="center"
        android:text="1000"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/textColor"
        app:layout_constraintEnd_toStartOf="@+id/match_user_name_label"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/match_user_name_label"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/coiny"
        android:gravity="center"
        android:text="Name"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/textColor"
        app:layout_constraintBottom_toTopOf="@+id/match_user_name"
        app:layout_constraintEnd_toStartOf="@+id/match_user_score_label"
        app:layout_constraintStart_toEndOf="@+id/position_view"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/match_user_name"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="default"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/textColor"
        app:layout_constraintStart_toEndOf="@+id/position_view"
        app:layout_constraintTop_toBottomOf="@+id/match_user_name_label"/>

    <TextView
        android:id="@+id/match_user_score_label"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/coiny"
        android:gravity="center"
        android:text="Score"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/textColor"
        app:layout_constraintBottom_toTopOf="@+id/match_user_score"
        app:layout_constraintEnd_toStartOf="@+id/match_user_time_label"
        app:layout_constraintStart_toEndOf="@+id/match_user_name_label"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/match_user_score"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="0"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/textColor"
        app:layout_constraintEnd_toStartOf="@+id/match_user_time"
        app:layout_constraintStart_toEndOf="@+id/match_user_name"
        app:layout_constraintTop_toBottomOf="@+id/match_user_score_label"/>

    <TextView
        android:id="@+id/match_user_time_label"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/coiny"
        android:gravity="center"
        android:text="Time"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/textColor"
        app:layout_constraintBottom_toTopOf="@+id/match_user_time"
        app:layout_constraintEnd_toStartOf="@+id/match_last_word_label"
        app:layout_constraintStart_toEndOf="@+id/match_user_score_label"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/match_user_time"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="0"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/textColor"
        app:layout_constraintEnd_toStartOf="@+id/match_last_word"
        app:layout_constraintStart_toEndOf="@+id/match_user_score"
        app:layout_constraintTop_toBottomOf="@+id/match_user_time_label"/>

    <TextView
        android:id="@+id/match_last_word_label"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/coiny"
        android:gravity="center"
        android:text="Word"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/textColor"
        app:layout_constraintBottom_toTopOf="@+id/match_last_word"
        app:layout_constraintEnd_toStartOf="@+id/match_status_image"
        app:layout_constraintStart_toEndOf="@+id/match_user_time_label"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/match_last_word"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="default"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/textColor"
        app:layout_constraintEnd_toStartOf="@+id/match_status_image"
        app:layout_constraintStart_toEndOf="@+id/match_user_time"
        app:layout_constraintTop_toBottomOf="@+id/match_last_word_label"/>

    <ImageView
        android:id="@+id/match_status_image"
        android:layout_width="45dp"
        android:layout_height="60dp"
        android:layout_marginEnd="28dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/match_last_word_label"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_happy_smile_icon"/>

</android.support.constraint.ConstraintLayout>