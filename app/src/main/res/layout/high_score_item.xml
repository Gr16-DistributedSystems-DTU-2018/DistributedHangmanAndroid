<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
        android:id="@+id/high_score_user_name_label"
        android:layout_width="90dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/coiny"
        android:gravity="center"
        android:text="Name"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/textColor"
        app:layout_constraintEnd_toStartOf="@+id/high_score_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/high_score_user_name"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="@string/pref_default_display_name"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/textColor"
        app:layout_constraintEnd_toStartOf="@+id/high_score"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/high_score_user_name_label"/>

    <TextView
        android:id="@+id/high_score_label"
        android:layout_width="90dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="60dp"
        android:fontFamily="@font/coiny"
        android:gravity="center"
        android:text="High Score"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/textColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/high_score"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="60dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="0"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/textColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/high_score_label"/>

</android.support.constraint.ConstraintLayout>