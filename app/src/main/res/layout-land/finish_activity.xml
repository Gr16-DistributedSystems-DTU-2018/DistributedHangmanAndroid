<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.inabsentia.superhangman.main.activity.FinishActivity">

    <TextView
        android:id="@+id/status"
        android:layout_width="307dp"
        android:layout_height="41dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:text="@string/finish_status_label_tmp"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btn_continue"
        android:layout_width="255dp"
        android:layout_height="55dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/round_btn"
        android:text="@string/btn_continue_label"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"/>

    <ImageView
        android:id="@+id/smiley_image"
        android:layout_width="187dp"
        android:layout_height="195dp"
        android:layout_marginLeft="0dp"
        android:contentDescription="@string/happy_smile_image_desc"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/happy_smiley"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintRight_toLeftOf="@+id/status_body"
        android:layout_marginRight="0dp"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"/>

    <TextView
        android:id="@+id/status_body"
        android:layout_width="382dp"
        android:layout_height="195dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="21dp"
        android:text="@string/finish_body_status_label_tmp"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/status"/>

</android.support.constraint.ConstraintLayout>
